---
import BaseLayout from "./BaseLayout.astro";
import Tags from "../components/Tags.astro";
import { Icon } from "astro-icon/components";

const { frontmatter } = Astro.props;
const dateFormatter = new Intl.DateTimeFormat("en-US", {
  timeZone: "UTC",
  weekday: "long",
  month: "short",
  day: "numeric",
  year: "numeric",
});
const formattedDate = dateFormatter.format(new Date(frontmatter.pubDate));
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="metadata">
    <div class="metadata-date">
      <Icon name="fa6-regular:calendar" size={20} />
      {formattedDate}
    </div>
    <Tags
      tags={frontmatter.tags.map((tag: string) => ({
        name: tag,
        url: `/tags/${tag}`,
      }))}
    />
  </div>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} width="300" />
  <article>
    <slot />
  </article>
</BaseLayout>

<style>
  .metadata {
    margin-block: 1rem;

    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }
  .metadata-date {
    display: flex;
    gap: 0.5rem;
  }
</style>
