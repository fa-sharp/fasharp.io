---
import BaseLayout from "./BaseLayout.astro";
import Tags from "../components/Tags.astro";

const { frontmatter } = Astro.props;

const formattedDate = new Date(frontmatter.pubDate).toDateString();
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="metadata">
    <div>🗓️ {formattedDate}</div>
    <Tags
      tags={frontmatter.tags.map((tag: string) => ({
        name: tag,
        url: `/tags/${tag}`,
      }))}
    />
  </div>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} width="300" />
  <article>
    <slot />
  </article>
</BaseLayout>

<style>
  .metadata {
    margin-block: 1rem;

    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }
</style>
