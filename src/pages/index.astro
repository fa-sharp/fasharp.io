---
import { Image } from "astro:assets";
import profileImage from "~assets/profile.jpg";
import Greeting from "~components/Greeting";
import BaseLayout from "~layouts/BaseLayout.astro";
import RecentPosts from "~components/RecentPosts.astro";
---

<BaseLayout>
  <div class="container">
    <div class="main-content">
      <Greeting
        client:load
        color="var(--accent)"
        fontSize="2.3rem"
        messages={[
          "Hey there!",
          "Hello world.",
          "Hi there!",
          "Salaam!",
          "!ÿ≥ŸÑÿßŸÖ",
          "Howdy!",
          "Welcome my friend.",
          "Hello!",
          "Bonjour!",
        ]}
      />
      <p>
        I'm Farshad üëãüèº - musician, coder, and teacher. I have a passion for
        building joyful, useful, accessible apps on the web.
      </p>
      <Image
        class="profile-image"
        src={profileImage}
        alt="profile"
        width={200}
        height={200}
      />
    </div>
    <RecentPosts />
  </div>
  <p>
    This is my little corner of the internet where I write about my coding
    journey, projects I'm working on, topics I'm passionate about, and other
    nerdy things. I focus mostly on tech and developer stuff, but I may veer
    into other interests too!
  </p>
</BaseLayout>

<style>
  .container {
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
  }
  .main-content {
    flex: 2;
    min-width: 300px;
  }
  .profile-image {
    border-radius: 50%;
  }
  @media screen and (min-width: 636px) {
    .container {
      flex-wrap: nowrap;
    }
  }
</style>
