---
export interface Props {
  tags: Array<{
    url: string;
    name: string;
  }>;
}

const { tags } = Astro.props;
---

<div class="tags">
  🏷️
  {
    tags.map((tag) => (
      <div class="tag">
        <a href={tag.url}>{tag.name}</a>
      </div>
    ))
  }
</div>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5em;
  }

  .tag {
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.05em 0.3em;
    background-color: #f8fcfd;
  }

  .tag a {
    color: #00539f;
    text-decoration: none;
  }
  .tag a:hover,
  .tag a:focus {
    text-decoration: underline;
  }
</style>
